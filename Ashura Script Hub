function getAllBladeHits(Sizes, targetType) local Hits = {} local Client = game.Players.LocalPlayer local targetFolder if targetType == "Players" then targetFolder = game:GetService("Workspace").Characters:GetChildren() elseif targetType == "Enemies" then targetFolder = game:GetService("Workspace").Enemies:GetChildren() else return Hits end for _, target in ipairs(targetFolder) do local Humanoid = target:FindFirstChildOfClass("Humanoid") if Humanoid and Humanoid.RootPart and Humanoid.Health > 0 then local distance = Client:DistanceFromCharacter(Humanoid.RootPart.Position) if distance < Sizes + 5 and (targetType == "Players" and target.Name ~= Client.Name or targetType == "Enemies") then table.insert(Hits, Humanoid.RootPart) end end end return Hits end
